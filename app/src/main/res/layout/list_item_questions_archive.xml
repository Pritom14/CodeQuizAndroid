<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_list_archive_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mittsu.markedview.MarkedView
                android:id="@+id/item_list_archive_question_statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="What do you mean by static method?"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"></com.mittsu.markedview.MarkedView>


            <Button
                android:id="@+id/list_item_question_archive_btn_attempt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_shape"
                android:text="Attempt"
                android:textAppearance="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

    </android.support.v7.widget.CardView>


</LinearLayout>

